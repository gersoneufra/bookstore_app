<%= bootstrap_form_for(@author, html: {class: 'form-horizontal'}) do |f| %>
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <%= f.text_filed :first_name, class: 'form-control', hide_label: true%>
  </div>

  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <%= f.text_filed :last_name, class: 'form-control', hide_label: true%>
  </div>

  <div class="form-group">
    <div class="col-md-offset-3">
      <%= f.submit class: 'btn btn-primary'%>
    </div>
  </div>
<%= end %>
